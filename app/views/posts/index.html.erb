<% if notice %>
  <p class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert"><%= notice %></p>
<% end %>

<% content_for :title, "Posts" %>

<h1 class="text-3xl font-bold mb-6">Posts</h1>

<div id="posts" class="space-y-6">
  <% @posts.each do |post| %>
    <div class="bg-white shadow-md rounded-lg p-6">
      <%= render post %>
      <p class="mt-4">
        <%= link_to "Show this post", post, class: "text-blue-600 hover:text-blue-800 underline" %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New post", new_post_path, class: "mt-8 inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
