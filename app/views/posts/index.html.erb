<% if notice %>
  <div class="max-w-7xl mx-auto sm:px-6 lg:px-8 mt-4">
    <p class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert"><%= notice %></p>
  </div>
<% end %>

<%= content_for :header do %>
  <div class="flex justify-between items-center">
    <h1 class="text-xl font-bold text-gray-900 dark:text-gray-100">Posts</h1>
    <% if user_signed_in? %>
      <%= link_to "New post", new_post_path, class: "text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800 transition duration-150 ease-in-out" %>
    <% end %>
  </div>
<% end %>

<div class="py-12">
  <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
    <div class="bg-white dark:bg-gray-800 overflow-hidden shadow-sm sm:rounded-lg">
      <div class="p-6 text-gray-900 dark:text-gray-100">
        <div id="posts" class="space-y-6">
          <% @posts.each do |post| %>
            <div class="mb-4 pb-4 border-b border-gray-200 dark:border-gray-700">
              <%= render post %>
              <div class="mt-2">
                <%= link_to "Show this post", post, class: "text-blue-600 hover:text-blue-800 underline" %>
              </div>
              <% if post.user && post.created_at %>
                <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
                  By <%= post.user.name %> | <%= time_ago_in_words(post.created_at) %> ago
                </p>
              <% end %>
            </div>
          <% end %>
        </div>

        <%= paginate @posts if @posts.respond_to?(:total_pages) %>
      </div>
    </div>
  </div>
</div>