<%= content_for :header do %>
  <div class="flex justify-between items-center">
    <h1 class="text-xl font-bold text-gray-900 dark:text-gray-100">New Correction</h1>
    <%= link_to "Back to post", post_path(@post), class: "text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800 transition duration-150 ease-in-out" %>
  </div>
<% end %>

<div class="py-12">
  <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
    <div class="bg-white dark:bg-gray-800 overflow-hidden shadow-sm sm:rounded-lg">
      <div class="p-6 text-gray-900 dark:text-gray-100">
        <%= render "form", post: @post, correction: @correction %>
      </div>
    </div>
  </div>
</div>
